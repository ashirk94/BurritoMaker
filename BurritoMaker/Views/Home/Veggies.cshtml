@model BurritoMaker.Models.Recipe

@{
    ViewData["Title"] = "Veggie&Fruit";
}

<h1>Veggies and Fruits</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Veg1" class="control-label"></label>
                <select name="Vegetable/Fruit1" asp-for="Veg1" class="form-control">
                    <option value="Mushrooms">Mushrooms</option>
                    <option value="Lettuce">Lettuce</option>
                    <option value="Tomato">Tomato</option>
                    <option value="Green Pepper">Green Pepper</option>
                </select>

                <span asp-validation-for="Veg1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veg2" class="control-label"></label>
                <select name="Vegetable/Fruit2" asp-for="Veg2" class="form-control">
                    <option value="Spinach">Spinach</option>
                    <option value="Avocado">Avocado</option>
                    <option value="Apple">Apple</option>
                    <option value="Potato">Potato</option>
                </select>
                <span asp-validation-for="Veg2" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
        </form>
    </div>
</div>
<br />
<a class="btn btn-info" href="Results">Next</a>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}