@model BurritoMaker.Models.Recipe

@{
    ViewData["Title"] = "Tortilla&Sauce";
}

<h1>Tortilla and Sauce</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tortilla" class="control-label"></label>
                <select name="Tortilla" asp-for="Tortilla" class="form-control" id="Tortilla">
                    <option value="Corn">Corn</option>
                    <option value="Rice">Rice</option>
                    <option value="Flour">Flour</option>
                </select>
                <span asp-validation-for="Tortilla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sauce" class="control-label"></label>
                <select name="Sauce" asp-for="Sauce" class="form-control">
                    <option value="Chipotle">Chipotle</option>
                    <option value="Green">Green</option>
                    <option value="Barbeque">Barbeque</option>
                </select>
                <span asp-validation-for="Sauce" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
        </form>
    </div>
</div>
<br />
<a class="btn btn-info" href="RiceBeans">Next</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
