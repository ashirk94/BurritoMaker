@model BurritoMaker.Models.Recipe

@{
    ViewData["Title"] = "Meat&Cheese";
}

<h1>Meat and Cheese</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Meat" class="control-label"></label>
                <select name="Meat/Protein" asp-for="Meat" class="form-control">
                    <option value="Chicken">Chicken</option>
                    <option value="Beef">Beef</option>
                    <option value="Pork">Pork</option>
                </select>
                <span asp-validation-for="Meat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cheese" class="control-label"></label>
                <select name="Cheese" asp-for="Cheese" class="form-control">
                    <option value="Cheddar">Cheddar</option>
                    <option value="Nacho">Nacho(liquid)</option>
                    <option value="Monterey Jack">Monterey Jack</option>
                </select>
                <span asp-validation-for="Cheese" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
        </form>
    </div>
</div>
<br />
<a class="btn btn-info" href="Veggies">Next</a>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
